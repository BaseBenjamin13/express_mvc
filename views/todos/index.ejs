
<!-- views/todos/index.hbs -->
<!-- {{!-- {{log "info logging" level="info"}} --}} -->

<header class="d-flex justify-content-between align-items-center">
  <h1>Todos</h1>
  <a href="/todos/new" class="btn btn-primary">New To Do</a>
</header>

<h1>Todos</h1>

<ul class="list-group">
  <% for(let i = 0; i < todos.length; i++){ %>
  <li class="list-group-item d-flex justify-content-between">
    
    <!-- replace: <div>{{this.title}}</div> with: -->
    <div><%=todos[i].title %></div>

  

    <div class="links">
      <!-- for actions later -->
      <a href="/todos/<%=todos[i]._id%>" class="btn btn-info">View</a> 
      <a href="/todos/<%=todos[i]._id%>/edit" class="btn btn-primary">Edit</a>
	
		<form action="/todos/<%=todos[i].id%>?_method=DELETE" method="POST" class="d-inline">
      	<input type="submit" value="Delete" class="btn btn-danger" />
      	</form>
    </div>
  </li>
  <% } %>
</ul>






